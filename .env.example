# Ejemplo de archivo .env para docker-compose. Copia a .env y edita valores confidenciales

# MySQL
MYSQL_ROOT_PASSWORD=replace_root_password
MYSQL_DATABASE=magicworld
MYSQL_USER=magicuser
MYSQL_PASSWORD=replace_db_password

# Spring datasource (si quieres usar variables separadas)
SPRING_DATASOURCE_URL=jdbc:mysql://db:3306/magicworld
SPRING_DATASOURCE_USERNAME=${MYSQL_USER}
SPRING_DATASOURCE_PASSWORD=${MYSQL_PASSWORD}

# JWT
JWT_SECRET=replace_jwt_secret_base64

# Email
SPRING_MAIL_HOST=smtp.gmail.com
SPRING_MAIL_PORT=587
SPRING_MAIL_PROTOCOL=smtp
SPRING_MAIL_USERNAME=noreply.magicworld@gmail.com
SPRING_MAIL_PASSWORD=replace_mail_password

